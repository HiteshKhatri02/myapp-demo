<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorLightGreen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Theme for now window background-->
    <style name="NoWindowBackground" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@null</item>
    </style>

    <!--Theme for now window background-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_background_splash</item>
    </style>

    <!--Custom alert dialog-->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:background">@color/colorAlertBackground</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:colorBackground">@null</item>
    </style>

    <!--Internet retry dialog-->
    <style name="AppCompatInternetRetryDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:background">@color/colorInternetError</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
        <item name="android:windowBackground">@null</item>
    </style>

</resources>
